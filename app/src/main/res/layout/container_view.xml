<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.garbagecollector.view.main.ui.fragments.MapViewFragmentS">

    <!-- подключение основного контента -->
    <include
        layout="@layout/map_lays"
        android:id="@+id/main_lay_reference"/>

    <!-- подключение нижнего экрана -->
<!--    <include-->
<!--        android:visibility="invisible"-->
<!--        layout="@layout/bottom_sheet"-->
<!--        android:id="@+id/bottom_sheet_reference"/>-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/myLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="70dp"
        android:src="@drawable/ic_arrow_location"
        android:backgroundTint="@color/white"
        app:elevation="6dp"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:pressedTranslationZ="12dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.garbagecollector.view.main.ui.fragments.MapViewFragment">

    <!-- подключение основного контента -->
    <include
        layout="@layout/map_lay"
        android:id="@+id/main_lay_reference"/>

    <!-- подключение нижнего экрана -->
    <include
        android:visibility="invisible"
        layout="@layout/bottom_sheet"
        android:id="@+id/bottom_sheet_reference"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>